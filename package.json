{
  "name": "commodity_token",
  "version": "0.0.1",
  "description": "test and deploy commodity token smart contracts",
  "main": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "rm -r artifacts cache",
    "reset": "cp .deployedCtrts.template .deployedCtrts && cd .openzeppelin && rm unknown-*.json && ls -l",
    "accounts": "npx hardhat accounts",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "d99": "hardhat --network hardhatnode deploy",
    "t2u": "npx hardhat test test/ERC20UStaking.ts",
    "hnode": "npx hardhat node",
    "deploylocal": "env DEBUG='@openzeppelin:*' npx hardhat run --network hardhatnode deploy/ERC20Uc.ts",
    "deploysepolia": "env DEBUG='@openzeppelin:*' npx hardhat run --network sepolia deploy/ERC20Uc.ts",
    "deploymain": "env DEBUG='@openzeppelin:*' npx hardhat run --network main deploy/ERC20Uc.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.22.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.16",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.4",
    "hardhat-erc1820": "^0.1.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "web3": "^1.8.1",
    "yarn-upgrade-all": "^0.7.1"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "envfile": "^6.18.0"
  }
}
